# Required: PostgreSQL connection string
# Local development: postgresql://postgres:dev@localhost:5432/mcp_shared_context
# Railway: Auto-injected as DATABASE_URL
DATABASE_URL=postgresql://postgres:dev@localhost:5432/mcp_shared_context

# Required: Bearer token for authentication
# Generate with: openssl rand -base64 32
MCP_AUTH_TOKEN=your-secret-token-here

# Optional: Server port (default: 3000)
PORT=3000

# Optional: Environment (development/production)
NODE_ENV=development

# Optional: Logging level (info/debug)
LOG_LEVEL=info

# Optional: Test database (for running tests)
TEST_DATABASE_URL=postgresql://postgres:dev@localhost:5432/mcp_shared_context_test
