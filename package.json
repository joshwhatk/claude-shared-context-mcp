{
  "name": "mcp-shared-context",
  "version": "1.0.0",
  "description": "MCP server for persistent, shared context across Claude conversations",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:frontend": "npm run --prefix frontend dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "npm run --prefix frontend build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate": "tsx src/db/migrations.ts",
    "postinstall": "cd frontend && npm install",
    "docker:up": "docker-compose up -d postgres postgres-test",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:server": "docker-compose up --build mcp-server",
    "docker:clean": "docker-compose down -v"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "anthropic",
    "context-sharing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
